@using System.Globalization
@model Notifications.Web.ViewModels.InboxViewModel
@{
	ViewBag.Title = "Inbox";
}

<h2>Messages</h2>

<html lang="en">
<head>
	<title>Bootstrap Example</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
<div class="container">
	@if (!@Model.Messages.Any())
	{
		<p>No Messages</p>
	}
	else
	{
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Date</th>
					<th>Subject</th>
				</tr>
			</thead>
			<tbody>

				@foreach (var message in Model.Messages)
				{
					<tr>
						<td id="@message.RowKey">@message.Date.ToString("MMMM dd, yyyy")</td>
						<td id="@message.RowKey">@message.Title</td>
					</tr>
				}
			</tbody>
		</table>
	}
</div>
<div class="container body-content">
	<hr/>
	<div id="messageContainer" hidden></div>
</div>
</body>



</html>

@Scripts.Render("~/bundles/jquery")
<script src="~\Scripts/notifications/notifications.js"></script>
